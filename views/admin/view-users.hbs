<section style="margin: 150px 250px;">
   <div class="container mt-5 text-center">
    <ul class="breadcrumb">
     <li><a href="#">Manage Users</a></li>
     <li>View Users</li>
    </ul>
       <table class="table" id="productsTable" style="margin: 3rem; padding: 5rem;">
  <thead>
    <tr>
      <th scope="">No</th>
      <th scope="col">Username</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Status</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each allUsers}}
    <tr>
      <td class="align-middle">{{@index}}</td>
      <td class="align-middle">{{this.Name}}</td>
      <td class="align-middle">{{this.Email}}</td>
      <td class="align-middle">{{this.Number}}</td>
      <td class="align-middle">
        {{#if this.status}}
        Active
        {{else}}
        Blocked
        {{/if}}
      </td>
      <td class="align-middle">
         {{#if this.status}}
         <a href="/admin/block-user/{{this._id}}" class="btn btn-warning">Block</a>
         {{else}}
         <a href="/admin/unblock-user/{{this._id}}" class="btn btn-danger">Unblock</a>
         {{/if}}
      </td>
    </tr>
    {{/each}}
  </tbody>
</table> 
   </div>
</section>

